#!/bin/bash
# script/start: Start the application in development or production mode.

set -e

cd "$(dirname "$0")/.."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Parse command line arguments
PRODUCTION=false
DOCKER=false

for arg in "$@"; do
    case $arg in
        --production)
            PRODUCTION=true
            shift
            ;;
        --docker)
            DOCKER=true
            shift
            ;;
        *)
            echo -e "${RED}Unknown option: $arg${NC}"
            echo ""
            echo "Usage: ./script/start [options]"
            echo ""
            echo "Options:"
            echo "  --production   Start in production mode"
            echo "  --docker       Start server in Docker (development mode)"
            echo ""
            exit 1
            ;;
    esac
done

if [ "$DOCKER" = true ]; then
    echo "==> Starting in DOCKER DEVELOPMENT mode..."
    echo ""

    # Check if Docker is installed
    if ! command -v docker &> /dev/null; then
        echo -e "${RED}Error: Docker is not installed${NC}"
        echo ""
        echo "Please install Docker to use this mode."
        echo "Visit: https://docs.docker.com/get-docker/"
        echo ""
        exit 1
    fi

    # Check for .env.docker file
    if [ ! -f .env.docker ]; then
        echo -e "${RED}Error: .env.docker file not found${NC}"
        echo ""
        echo "Please run ./script/bootstrap to set up Docker development environment."
        echo ""
        exit 1
    fi

    echo -e "${GREEN}✓${NC} Docker is installed"
    echo -e "${GREEN}✓${NC} .env.docker file found"
    echo ""
    echo "    Server (Docker): http://localhost:5000"
    echo "    Client (local):  http://localhost:3000"
    echo ""
    echo "    In another terminal, run: cd client && yarn start"
    echo ""
    echo "    Press Ctrl+C to stop"
    echo ""

    docker-compose up --build
    exit 0

elif [ "$PRODUCTION" = true ]; then
    echo "==> Starting in PRODUCTION mode..."
    echo ""

    # Validate environment variables
    if [ ! -f .env ]; then
        echo -e "${RED}Error: .env file not found${NC}"
        echo ""
        echo "Production mode requires environment variables to be configured."
        echo "Please create a .env file with your Spotify API credentials."
        echo "See script/.env.example for a template."
        echo ""
        exit 1
    fi

    # Source .env and check required variables
    set -a
    source .env
    set +a

    MISSING_VARS=()

    if [ -z "$SPOTIFY_ID" ]; then
        MISSING_VARS+=("SPOTIFY_ID")
    fi

    if [ -z "$SPOTIFY_SECRET" ]; then
        MISSING_VARS+=("SPOTIFY_SECRET")
    fi

    if [ -z "$REDIRECT_URI" ]; then
        MISSING_VARS+=("REDIRECT_URI")
    fi

    if [ ${#MISSING_VARS[@]} -gt 0 ]; then
        echo -e "${RED}Error: Missing required environment variables:${NC}"
        for var in "${MISSING_VARS[@]}"; do
            echo "  - $var"
        done
        echo ""
        echo "Please update your .env file with these values."
        echo "See script/.env.example for a template."
        echo ""
        exit 1
    fi

    echo -e "${GREEN}✓${NC} Environment variables validated"
    echo ""

    # Build server
    echo "==> Building server..."
    yarn build

    # Build client
    echo ""
    echo "==> Building client..."
    cd client
    yarn build
    cd ..

    # Start production server
    echo ""
    echo -e "${GREEN}✓${NC} Build complete"
    echo ""
    echo "==> Starting production server..."
    echo "    Server will be available at http://localhost:${PORT:-5000}"
    echo ""
    yarn server
else
    echo "==> Starting in DEVELOPMENT mode..."
    echo ""
    echo "    Server: http://localhost:5000"
    echo "    Client: http://localhost:3000"
    echo ""
    echo "    Press Ctrl+C to stop"
    echo ""
    yarn dev:start-all
fi
