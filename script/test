#!/bin/bash
# script/test: Run all tests for the application (server and client).

set -e

cd "$(dirname "$0")/.."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Parse command line arguments
WATCH=false
COVERAGE=false
CLIENT_ONLY=false
SERVER_ONLY=false

for arg in "$@"; do
    case $arg in
        --watch)
            WATCH=true
            shift
            ;;
        --coverage)
            COVERAGE=true
            shift
            ;;
        --client)
            CLIENT_ONLY=true
            shift
            ;;
        --server)
            SERVER_ONLY=true
            shift
            ;;
        --help)
            echo "Usage: ./script/test [options]"
            echo ""
            echo "Options:"
            echo "  --watch      Run tests in watch mode"
            echo "  --coverage   Run tests with coverage report"
            echo "  --client     Run only client tests"
            echo "  --server     Run only server tests"
            echo "  --help       Show this help message"
            echo ""
            echo "Examples:"
            echo "  ./script/test              # Run all tests once"
            echo "  ./script/test --watch      # Run all tests in watch mode"
            echo "  ./script/test --coverage   # Run all tests with coverage"
            echo "  ./script/test --client     # Run only client tests"
            exit 0
            ;;
        *)
            echo -e "${RED}Unknown option: $arg${NC}"
            echo "Use --help for usage information"
            exit 1
            ;;
    esac
done

echo "==> Running Festival Player Tests"
echo ""

# Run server tests
if [ "$CLIENT_ONLY" = false ]; then
    echo -e "${BLUE}==> Running server tests...${NC}"
    echo ""

    if [ "$WATCH" = true ]; then
        yarn test:watch
    elif [ "$COVERAGE" = true ]; then
        yarn test:coverage
    else
        yarn test
    fi

    if [ $? -eq 0 ]; then
        echo ""
        echo -e "${GREEN}✓${NC} Server tests passed"
    else
        echo ""
        echo -e "${RED}✗${NC} Server tests failed"
        exit 1
    fi
fi

# Run client tests
if [ "$SERVER_ONLY" = false ]; then
    echo ""
    echo -e "${BLUE}==> Running client tests...${NC}"
    echo ""

    cd client

    if [ "$WATCH" = true ]; then
        yarn test --watchAll
    elif [ "$COVERAGE" = true ]; then
        yarn test --coverage --watchAll=false
    else
        yarn test --watchAll=false
    fi

    if [ $? -eq 0 ]; then
        echo ""
        echo -e "${GREEN}✓${NC} Client tests passed"
    else
        echo ""
        echo -e "${RED}✗${NC} Client tests failed"
        exit 1
    fi

    cd ..
fi

echo ""
echo -e "${GREEN}==> All tests passed!${NC}"
echo ""

if [ "$COVERAGE" = true ]; then
    echo "Coverage reports generated:"
    if [ "$CLIENT_ONLY" = false ]; then
        echo "  - Server: coverage/lcov-report/index.html"
    fi
    if [ "$SERVER_ONLY" = false ]; then
        echo "  - Client: client/coverage/lcov-report/index.html"
    fi
    echo ""
fi
